{
  "name": "ditloop",
  "private": true,
  "description": "Terminal IDE centered on Developer In The Loop for multi-project developers",
  "license": "MIT",
  "author": "Ruben Mavarez <rubennmavarezb@gmail.com>",
  "homepage": "https://github.com/rubenmavarezb/ditloop#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rubenmavarezb/ditloop.git"
  },
  "keywords": [
    "terminal-ide",
    "tui",
    "developer-tools",
    "workspace-management",
    "git-identity",
    "ai-development",
    "aidf",
    "ink",
    "cli"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
